<?xml version="1.0" encoding="UTF-8"?>
<config>

    <modules>
        <Doofinder_Feed>
            <version>1.5.4</version>
        </Doofinder_Feed>
    </modules>

    <global>
        <helpers>
            <doofinder_feed>
                <class>Doofinder_Feed_Helper</class>
            </doofinder_feed>
        </helpers>
        <models>
            <doofinder_feed>
                <class>Doofinder_Feed_Model</class>
                <resourceModel>doofinder_feed_mysql4</resourceModel>
            </doofinder_feed>
            <doofinder_feed_mysql4>
                <class>Doofinder_Feed_Model_Mysql4</class>
                <entities>
                    <cron>
                        <table>doofinder_feed_cron</table>
                    </cron>
                </entities>
            </doofinder_feed_mysql4>
        </models>
        <resources>
            <doofinder_feed_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </doofinder_feed_write>
            <doofinder_feed_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </doofinder_feed_read>
            <doofinder_feed_setup>
                <setup>
                    <module>Doofinder_Feed</module>
                    <class>Doofinder_Feed_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </doofinder_feed_setup>
        </resources>
        <blocks>
            <doofinder_feed>
                <class>Doofinder_Feed_Block</class>
            </doofinder_feed>
        </blocks>
        <events>
            <admin_system_config_changed_section_doofinder_cron>
                <observers>
                    <mymodule>
                        <type>singleton</type>
                        <class>doofinder_feed/observers_schedule</class>
                        <method>saveNewSchedule</method>
                    </mymodule>
                </observers>
            </admin_system_config_changed_section_doofinder_cron>
        </events>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <doofinder_cron>
                                            <title>Cron Options</title>
                                        </doofinder_cron>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <install></install>

    <frontend>
        <routers>
            <doofinder_feed>
                <use>standard</use>
                <args>
                    <module>Doofinder_Feed</module>
                    <frontName>doofinder</frontName>
                </args>
            </doofinder_feed>
        </routers>
    </frontend>

    <default>
        <doofinder>
            <feed>

                <enabled>1</enabled>
                <debug>1</debug>

                <group_configurable_products>1</group_configurable_products>

                <product_types><![CDATA[simple,virtual,bundle,configurable,downloadable,grouped]]></product_types>
                <!--product_types><![CDATA[bundle]]></product_types-->
                <excluded_attributes><![CDATA[gallery,image,small_image,special_price,special_from_date,special_to_date,price_view,url_key]]></excluded_attributes>
                <additional_attributes><![CDATA[status]]></additional_attributes>

                <directives>
                    <df_directive_id>
                        <label><![CDATA[Product Id]]></label>
                    </df_directive_id>
                    <df_directive_url>
                        <label><![CDATA[Product URL]]></label>
                    </df_directive_url>
                    <df_directive_image_link>
                        <label><![CDATA[Product Image URL]]></label>
                    </df_directive_image_link>
                    <df_directive_sale_price>
                        <label><![CDATA[Sale Price]]></label>
                    </df_directive_sale_price>
                    <df_directive_price>
                        <label><![CDATA[Price]]></label>
                    </df_directive_price>
                    <df_directive_currency>
                        <label><![CDATA[Store Currency]]></label>
                    </df_directive_currency>
                    <df_directive_availability>
                        <label><![CDATA[Availability]]></label>
                    </df_directive_availability>
                    <df_directive_condition>
                        <label><![CDATA[Product Condition]]></label>
                    </df_directive_condition>
                </directives>

                <default_field_map>
                    <id>
                        <label>Unique Identifier</label>
                        <attribute>df_directive_id</attribute>
                    </id>
                    <mpn>
                        <label>Product SKU</label>
                        <attribute>sku</attribute>
                    </mpn>
                    <title>
                        <label>Title</label>
                        <attribute>name</attribute>
                    </title>
                    <description>
                        <label>Description</label>
                        <attribute>short_description</attribute>
                    </description>
                    <long_description>
                        <label>Long Description</label>
                        <attribute>description</attribute>
                    </long_description>
                    <meta_title>
                        <label>Meta Title</label>
                        <attribute>meta_title</attribute>
                    </meta_title>
                    <meta_keyword>
                        <label>Meta Keywords</label>
                        <attribute>meta_keyword</attribute>
                    </meta_keyword>
                    <meta_description>
                        <label>Meta Description</label>
                        <attribute>meta_description</attribute>
                    </meta_description>
                    <brand>
                        <label>Brand</label>
                        <attribute>manufacturer</attribute>
                    </brand>
                    <link>
                        <label>Product Link</label>
                        <attribute>df_directive_url</attribute>
                    </link>
                    <image_link>
                        <label>Image</label>
                        <attribute>df_directive_image_link</attribute>
                    </image_link>
                    <price>
                        <label>Normal Price</label>
                        <attribute>df_directive_price</attribute>
                    </price>
                    <sale_price>
                        <label>Sale Price</label>
                        <attribute>df_directive_sale_price</attribute>
                    </sale_price>
                    <availability>
                        <label>Availability</label>
                        <attribute>df_directive_availability</attribute>
                    </availability>
                    <currency>
                        <label>Currency</label>
                        <attribute>df_directive_currency</attribute>
                    </currency>
                </default_field_map>

            </feed>
        </doofinder>
        <doofinder_cron>
            <settings>
                <name>doofinder-default.xml</name>
                <minimal_price>1</minimal_price>
                <grouped>1</grouped>
                <step>5</step>
            </settings>
        </doofinder_cron>
    </default>

    <stores></stores>

    <websites></websites>

    <crontab>
        <jobs>
            <doofinder_feed_generate>
                <run>
                    <model>doofinder_feed/observers_feed::generateFeed</model>
                </run>
            </doofinder_feed_generate>
            <doofinder_feed_schedule>
                <schedule>
                    <cron_expr>* */12 * * *</cron_expr>
                </schedule>
                <run>
                    <model>doofinder_feed/observers_schedule::regenerateSchedule</model>
                </run>
            </doofinder_feed_schedule>
        </jobs>
    </crontab>

    <phpunit>
        <suite>
            <modules>
                <Doofinder_Feed />
            </modules>
            <groups>
                <controller>Controller</controller>
            </groups>
        </suite>
    </phpunit>

</config>
